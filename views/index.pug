doctype html
html
    head
        title Login
        link(rel="stylesheet" href="/css/styles.css")
        link(rel="stylesheet", href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css")
        script(src="https://code.jquery.com/jquery-3.3.1.slim.min.js")
        script(src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js")
    body
        block content
            div.text-center
                form(class="form-signin" methon='POST')

                    - var h1Classes = ['h3', 'mb-3', 'font-weight-normal']
                    h1(class=h1Classes) Log In

                    label( for="email" class="sr-only") Email address
                    input(type="email" id="email" class="form-control" placeholder="Email Address" required)

                    label(for="password" class="sr-only") Password
                    input(type="password" id="password" class="form-control" placeholder="Password" required)

                    - var buttonClass=['btn', 'btn-lg', 'btn-primary', 'btn-block'];
                    button(class=buttonClass type="submit") Sign in


