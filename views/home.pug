doctype html
html
    head
        title Login
        link(rel='stylesheet', href='/css/styles.css')
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js')
        script(src='js/jquery.min.js')
        script(src='js/home.js')


    body
        .container-fluid
            .form-imageUpload
                .row
                    .col-md-12
                        div(style='margin-top:10px')
                            h1.h3.mb-3.font-weight-normal Add Address
                    .col-md-12
                        input(type='text', id='city', placeholder='Enter City')
                    .col-md-12
                        input(type='text', id='state', placeholder='Enter State')
                    .col-md-12
                        input(type='text', id='pin', placeholder='Enter PIN Code')
                    .col-md-4
                        button.btn.btn-primary(type="submit" onclick='sendformData()') Submit
                    .col-md-4
                        a(href='/getuser') Get Cookie
                .row
                     .col-md-12
                         h5(style='margin-top:10px') Cookie Data
                         p(style='margin-top:10px') #{urlName}
                p#userEmail(class='hide') #{user}


